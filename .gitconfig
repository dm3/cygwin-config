[apply]
    whitespace = fix

[merge]
    tool = vimdiff

[color]
    ui = auto
    status = auto
    branch = auto
    diff = auto

[alias]
    stage = add
    unstage = reset HEAD
    ci = commit
    cia = commit --amend
    co = checkout
    br = branch
    st = status
    dc = diff --cached
    dw = diff --word-diff
    aa = add -A
    prb = pull --rebase
    rbc = rebase --continue
    rmall = !git ls-files --deleted | xargs git rm

    # Grep from repository root
    gra = "!f() { A=$(pwd) && TOPLEVEL=$(git rev-parse --show-toplevel) && cd $TOPLEVEL && git grep --full-name -In $1 | xargs -I{} echo $TOPLEVEL/{} && cd $A; }; f"

    addregex = !"$MY_SCRIPTS"/git/git_add_regex.sh

    svnup = !"$MY_SCRIPTS"/git/svn_up_branch.sh
    svnpush = !"$MY_SCRIPTS"/git/svn_push_branch.sh

    out = log --oneline --decorate origin/master..HEAD
    in = !git fetch || git lg ..origin/master

    ll = log --pretty=format:"%C(yellow)%h%Cred%d%Creset\\ %cn\\ %Cblue%cr%Creset\\ %Cgreen%s%Creset" --decorate --numstat
    lg = log --pretty=format:"%C(yellow)%h%Cred%d%Creset\\ %cn\\ %Cblue%cr%Creset\\ %Cgreen%s%Creset" --decorate
    lgraph = !git lg --graph

[core]
    editor = vim

[user]
    name = Vadim Platonov
    email = vadim@inventi.lt

[push]
    default = upstream
