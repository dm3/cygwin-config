[apply]
    whitespace = fix

[merge]
    tool = vimdiff

[color]
    ui = auto
    status = auto
    branch = auto
    diff = auto

[alias]
    stage = add
    unstage = reset HEAD
    ci = commit
    co = checkout
    br = branch
    st = status
    dc = diff --cached
    d = diff
    a = add -u
    aa = add -A
    rmall = !git ls-files --deleted | xargs git rm
    out = log origin/master..HEAD
    in = log HEAD..origin/master
    addregex = !"$MY_SCRIPTS"/git/git_add_regex.sh
    svnup = !"$MY_SCRIPTS"/git/svn_up_branch.sh
    svnpush = !"$MY_SCRIPTS"/git/svn_push_branch.sh

    lg = log --pretty=format:"%C(yellow)%h%Cred%d%Creset\\ %cn\\ %Cblue%cr%Creset\\ %Cgreen%s%Creset" --decorate
    lgraph = !git lg --graph

[core]
    editor = vim

[user]
    name = dm3
